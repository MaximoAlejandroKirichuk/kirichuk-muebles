---
import Layout from '../layouts/Layout.astro';
import ProductosDestacados from '../components/header-footer/productos-destacados.astro';
import Promocion from '../components/header-footer/promocion.astro';
import Carrusel from '../components/header-footer/carrusel.astro';
---

<Layout title="Eclipse Muebles">
	<main>
	<section class="min-h-screen xl:min-h-8">
		<Carrusel/>
		<h1 class=" text-white p-0">Fábrica de Muebles a Medida</h1>
			<h2 class="TITULO-SECUNDARIO">Fabricando Experiencias Únicas en Cada Hogar</h2>
	</section>
	<ProductosDestacados/>
	<Promocion/>
	</main>
	<style>
		h1{
			text-align: center;
			padding: 0;
        	color: #ffffff;
			font-size: 35px;
		}
			.TITULO-SECUNDARIO{
				text-align: center;
				margin: 0;
				font-size: 20px;
			}
	</style>
</Layout>